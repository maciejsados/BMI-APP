<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waga w kilogramach"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wzrost w centymetrach"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/height"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Twoje BMI wynosi:" />

        <TextView
            android:id="@+id/BMI_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:padding="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/BMI_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:padding="20dp" />

        <TextView
            android:id="@+id/target_weigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:padding="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/weight_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" />


    <Button
        android:layout_width="match_parent"
        android:id="@+id/btn"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:background="@android:drawable/list_selector_background"
        android:backgroundTint="@android:color/transparent"
        android:text="Zapisz swÃ³j resultat" />






</LinearLayout>